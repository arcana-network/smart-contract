{
  "name": "arcana-smart-contracts",
  "description": "Smart contracts for arcana network",
  "version": "1.0.0",
  "author": {
    "name": "Saurav Kanchan",
    "url": "https://saurav.tech"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@ethersproject/abi": "^5.1.2",
    "@ethersproject/abstract-signer": "^5.1.0",
    "@ethersproject/bignumber": "^5.1.1",
    "@ethersproject/bytes": "^5.1.0",
    "@ethersproject/providers": "^5.1.2",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/hardhat-upgrades": "^1.13.0",
    "@typechain/ethers-v5": "^7.0.0",
    "@typechain/hardhat": "^2.0.1",
    "@types/chai": "^4.2.18",
    "@types/fs-extra": "^9.0.11",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.3.1",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "axios": "^0.27.2",
    "chai": "^4.3.4",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^9.0.2",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.1.4",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.6.5",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^6.0.0",
    "mocha": "^8.4.0",
    "prettier": "^2.8.1",
    "prettier-plugin-solidity": "^1.0.0-beta.10",
    "shelljs": "^0.8.5",
    "solc": "^0.8.8",
    "solhint": "^3.3.4",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.1",
    "typechain": "^5.0.0",
    "typescript": "^4.2.4"
  },
  "files": [
    "/contracts"
  ],
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity"
  ],
  "license": "WTFPL",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "hardhat clean",
    "commit": "git-cz",
    "compile": "hardhat compile",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy-dkg:network": "hardhat run scripts/deployNodeList.ts --network",
    "deploy-dkg": "hardhat run scripts/deployNodeList.ts",
    "deploy:network": "hardhat run scripts/deploy.ts --network",
    "lint": "npm run lint:sol && npm run lint:ts && npm run prettier:list-different",
    "lint:fix": "npm run lint:sol:fix && npm run lint:ts:fix && npm run prettier:list-different",
    "lint:sol": "solhint --fix --config ./.solhint.json --max-warnings 50 \"contracts/**/*.sol\"",
    "lint:sol:fix": "solhint --fix --config ./.solhint.json --max-warnings 50 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "lint:ts:fix": "eslint --fix --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:list-different": "prettier --config .prettierrc --list-different \"**/*.{js,json,md,sol,ts}\"",
    "test": "hardhat test",
    "typechain": "hardhat typechain",
    "docs": "hardhat docgen"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.8.0",
    "@openzeppelin/contracts-upgradeable": "^4.8.0",
    "eip-712": "^1.0.0",
    "eth-sig-util": "^3.0.1",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-docgen": "^1.3.0",
    "solidity-docgen": "^0.6.0-beta.22"
  }
}
